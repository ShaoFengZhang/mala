/* 外部样式 */

.wrapflex {
    display: flex;
    align-items: center;
    justify-content: flex-start;
}

.columnflex {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.normalView {
    position: relative;
    box-sizing: border-box;
    padding: 0 40rpx;
}

/* 组件样式 内容列表 */

.contentView {
    width: 100%;
    /* min-height: 700rpx;
    max-height: 738rpx; */
    overflow: hidden;
    background-color: white;
    margin-bottom: 16rpx;
    position: relative;
}

/* 内容顶部信息 */

.contentUserInfo {
    width: 100%;
    height: 76rpx;
    margin-top: 32rpx;
}

.userImg, .userImg image {
    width: 76rpx;
    height: 76rpx;
    border-radius: 8rpx;
    background-color: #f2f2f2;
    position: relative;
}

.userNameBox {
    width: 526rpx;
    /* height: 76rpx; */
    margin-left: 16rpx;
    position: relative;
}

.userNameView {
    width: 100%;
    /* height: 40rpx; */
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 6rpx;
    /* 单行文本溢出... */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.pointMenu {
    width: 52rpx;
    height: 76rpx;
    text-align: center;
    position: relative;
}

.pointMenu image{
    width: 28rpx;
    height: 28rpx;
    vertical-align: middle;
}

/* 内容文字简介 */

.contentDetails {
    margin-top: 24rpx;
    width: 100%;
    min-height: 55rpx;
    max-height: 158rpx;
    font-size: 36rpx;
    color: #282828;
    /* 2行文本溢出 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    position: relative;
}

.contentImg, .contentImg image {
    width: 100%;
    /* height: 400rpx; */
}

.contentImg {
    margin-top: 24rpx;
    position: relative;
}

.contentshare {
    width: 100%;
    height: 104rpx;
    justify-content: flex-end;
    box-sizing: border-box;
    overflow: hidden;
    color: #172434;
    font-size: 28rpx;
}

.contentshare view {
    height: 100%;
    text-align: center;
    line-height: 104rpx;
}

.shareImg {
    width: 100rpx;
    position: relative;
}

.contentshare image {
    width: 28rpx;
    height: 28rpx;
    vertical-align: middle;
}

.praiseBox, .opinionBox {
    width: 170rpx;
    position: relative;
}

.shareBtn {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    padding: 0;
    margin: 0;
}

.botTxt {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 28rpx;
    color: #999;
    background-color: #f3f5f9;
}

.getInfoBtn {
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    z-index: 999;
}

.nocom {
    font-size: 32rpx;
    color: #999;
    text-align: center;
    padding: 80rpx 0 80rpx 0;
}

.nocom image {
    width: 280rpx;
    height: 280rpx;
    vertical-align: middle;
    margin-bottom: 40rpx;
}

/* 收集formid */

.Sbtn {
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}
