.bg {
    background: #f3f5f9;
}

.contentView {
    width: 100%;
    overflow: hidden;
    background-color: white;
    margin-bottom: 110rpx;
}

/* 内容顶部信息 */

.contentUserInfo {
    width: 100%;
    height: 76rpx;
    margin-top: 32rpx;
}

.userImg, .userImg image {
    width: 76rpx;
    height: 76rpx;
    border-radius: 8rpx;
}

.userNameBox {
    width: 526rpx;
    height: 76rpx;
    margin-left: 16rpx;
}

.userNameView {
    width: 100%;
    height: 40rpx;
    font-size: 32rpx;
    margin-bottom: 6rpx;
    /* 单行文本溢出... */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.pointMenu {
    width: 52rpx;
    height: 76rpx;
    line-height: 26rpx;
    text-align: right;
}

/* 内容文字简介 */

.contentDetails {
    margin-top: 24rpx;
    width: 100%;
    min-height: 39rpx;
    font-size: 28rpx;
    color: #282828;
}

.contentImg, .contentImg image {
    width: 100%;
    height: 400rpx;
}

.contentImg {
    margin-top: 24rpx;
}

.botHandleView {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    min-height: 110rpx;
    background: white;
    box-sizing: border-box;
    /* padding: 10rpx 10rpx 10rpx 40rpx;
    justify-content: space-between; */
    padding: 10rpx 40rpx;
    justify-content: space-around;
}

.discussView{
    width: 400rpx;
    min-height: 64rpx;
    background: rgba(243, 245, 249, 1);
    border-radius: 32rpx;
    font-size: 28rpx;
    color: #000;
    box-sizing: border-box;
    padding:10rpx 20rpx;
}

textarea{
    width: 360rpx;
    height: 44rpx;
    line-height: 44rpx;
}

.shareImg {
    width: 100rpx;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    position: relative;
}

.botHandleView image {
    width: 32rpx;
    height: 32rpx;
}

