.bg {
    background: #f3f5f9;
}

.contentView {
    width: 100%;
    overflow: hidden;
    background-color: white;
    margin-bottom: 110rpx;
    padding-bottom: 14rpx;
}

/* 内容顶部信息 */

.contentUserInfo {
    width: 100%;
    height: 76rpx;
    margin-top: 32rpx;
}

.userImg, .userImg image {
    width: 76rpx;
    height: 76rpx;
    border-radius: 8rpx;
}

.userNameBox {
    width: 526rpx;
    /* height: 76rpx; */
    margin-left: 16rpx;
}

.userNameView {
    width: 100%;
    height: 40rpx;
    font-size: 32rpx;
    margin-bottom: 6rpx;
    /* 单行文本溢出... */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.pointMenu {
    width: 52rpx;
    height: 76rpx;
    line-height: 26rpx;
    text-align: right;
}

/* 内容文字简介 */

.contentDetails {
    margin-top: 24rpx;
    width: 100%;
    min-height: 39rpx;
    font-size: 36rpx;
    line-height: 56rpx;
    color: #282828;
}

.contentImg, .contentImg image {
    width: 100%;
}

.contentImg {
    margin-top: 24rpx;
}

.botHandleView {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    min-height: 88rpx;
    background: white;
    box-sizing: border-box;
    /* padding: 10rpx 10rpx 10rpx 40rpx;
    justify-content: space-between; */
    padding: 10rpx 40rpx;
    justify-content: space-around;
    border-top: 2rpx solid rgba(231, 231, 231, 1);
}

.discussView {
    width: 400rpx;
    min-height: 64rpx;
    background: rgba(243, 245, 249, 1);
    border-radius: 32rpx;
    font-size: 28rpx;
    color: #000;
    box-sizing: border-box;
    padding: 10rpx 20rpx;
}

textarea {
    width: 360rpx;
    height: 44rpx;
    line-height: 44rpx;
}

.shareImg {
    width: 100rpx;
    height: 66rpx;
    text-align: center;
    line-height: 66rpx;
    position: relative;
}

.botHandleView image {
    width: 32rpx;
    height: 32rpx;
}

.scroll-view_y{
    background-color: white;
}

/* 评论内容样式 */

.userComments {
    width: 100%;
    background-color: #fff;
}

.commentInfoView {
    width: 100%;
    height: 76rpx;
    background: gray;
    border-radius: 8rpx;
    align-items: flex-start;
}

.commentInfoView image:first-child {
    box-shadow: 0px 0px 40rpx 0px rgba(0, 0, 0, 0.1);
    border-radius: 8rpx;
}

.commentInfoView view:nth-of-type(1){
    width: 500rpx;
    background-color: red;
}
