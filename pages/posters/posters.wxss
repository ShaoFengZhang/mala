    width: 670rpx;
    height: 946rpx;
    border-radius: 16rpx;
    overflow: hidden;
    background-repeat: no-repeat;
    background-position: bottom;
    position: relative;
    background-size: 100%;
    margin: 32rpx auto 0;
}

.cardView {
    position: absolute;
    top: 0;
    left: 0;
    margin: 0;
}

.contentImg {
    width: 670rpx;
    height: 400rpx;
    vertical-align: top;
}

.wenyiimg, .wenyiimg image {
    width: 670rpx;
    height: 400rpx;
    top: 0;
    left: 0;
}

.zhufuimg, .zhufuimg image {
    width: 642rpx;
    height: 252rpx;
    top: 24rpx;
    left: 14rpx;
}

.aiqingimg, .aiqingimg image {
    width: 390rpx;
    height: 320rpx;
    top: 42rpx;
    left: 142rpx;
}

.hekaimg, .hekaimg image {
    width: 442rpx;
    height: 346rpx;
    top: 0rpx;
    left: 114rpx;
}

.xinzhiimg, .xinzhiimg image {
    width: 616rpx;
    height: 224rpx;
    top: 92rpx;
    left: 48rpx;
}

.contentTxt {
    width: 590rpx;
    height: 240rpx;
    font-size: 36rpx;
    line-height: 56rpx;
    margin: 34rpx auto 0;
}

.qrView {
    width: 550rpx;
    height: 144rpx;
    margin: 42rpx auto 0;
    display: flex;
}

.qrcodeView {
    width: 144rpx;
    height: 144rpx;
    position: relative;
}

.qrcode, .qrcode image {
    width: 144rpx;
    height: 144rpx;
    border-radius: 50%;
}

.userIcon {
    position: absolute;
    top: 38rpx;
    left: 38rpx;
}

.userIcon, .userIcon image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.userinfoView {
    width: 286rpx;
    height: 144rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 20rpx;
}

/* 假海报end */

.posterImg image {
    vertical-align: middle;
}

.posterImg {
    margin: 5.3vh auto 0;
    box-shadow: 6px 5px 10px -4px rgba(0, 0, 0, 0.06), 5px 1px 10px -4px rgba(0, 0, 0, 0.06);
}

.botCardView {
    width: 100%;
    height: 110rpx;
    box-sizing: border-box;
    padding: 0 36rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.card {
    width: 12.8vw;
    height: 6.8vh;
    background: #fff;
    border-radius: 200rpx 200rpx 0px 0px;
    text-align: center;
    font-size: 28rpx;
    color: #282828;
    line-height: 7vh;
}

.selectCard {
    height: 9.1vh;
    line-height: 9.3vh;
    color: #fff;
}

.savecard {
    background-color: #27bcad;
    color: #fff;
}
