.bg {
    width: 100%;
    height: 100vh;
    background-color: #F3F5F9;
}

.posterImg, .posterImg image {
    width: 670rpx;
    border-radius: 16rpx;
}

.posterImg image {
    vertical-align: middle;
}

.posterImg {
    margin: 5.3vh auto 0;
    box-shadow: 6px 5px 10px -4px rgba(0, 0, 0, 0.06), 5px 1px 10px -4px rgba(0, 0, 0, 0.06);
}

.botCardView {
    width: 100%;
    height: 110rpx;
    box-sizing: border-box;
    padding: 0 36rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.card {
    width: 12.8vw;
    height: 6.8vh;
    background: rgba(216, 216, 216, 1);
    border-radius: 200rpx 200rpx 0px 0px;
    text-align: center;
    font-size: 28rpx;
    color: #282828;
    line-height: 7vh;
}

.selectCard{
    height: 9.1vh;
    line-height: 9.3vh;
}

.savecard{
    background-color: #27BCAD;
    color: #fff;
}
