.bg {
    width: 100%;
    height: 100vh;
    background-repeat: no-repeat;
    background-position: bottom;
}

.bgw {
    background-color: #d0cce4;
}

.bgz {
    background-color: #ffd973;
}

.bga {
    background-color: #f7d5de;
    background-image: url("https://duanju.58100.com/upload/pick.png");
    background-size: 750rpx 328rpx;
}

.bgh {
    background-color: #bf1a1f;
    background-image: url("https://duanju.58100.com/upload/red.png");
    background-size: 750rpx 1204rpx;

}

.bgx {
    background-color: #e5d1c4;
}

.posterImg, .posterImg image {
    width: 670rpx;
    border-radius: 20rpx;
}

.posterImg image {
    vertical-align: middle;
}

.posterImg {
    margin: 5.3vh auto 0;
    box-shadow: 6px 5px 10px -4px rgba(0, 0, 0, 0.06), 5px 1px 10px -4px rgba(0, 0, 0, 0.06);
}

.botCardView {
    width: 100%;
    height: 110rpx;
    box-sizing: border-box;
    padding: 0 36rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.card {
    width: 12.8vw;
    height: 6.8vh;
    background: #fff;
    border-radius: 200rpx 200rpx 0px 0px;
    text-align: center;
    font-size: 28rpx;
    color: #282828;
    line-height: 7vh;
}

.selectCard {
    height: 9.1vh;
    line-height: 9.3vh;
    color:#fff;
}

.savecard {
    background-color: #27bcad;
    color: #fff;
}
