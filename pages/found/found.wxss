.bg {
    position: relative;
}

.topView {
    width: 750rpx;
    height: 644rpx;
    background-repeat: no-repeat;
    background-size: 750rpx 444rpx;
    background-image: url("https://duanju.58100.com/upload/5.png");
    box-sizing: border-box;
    padding: 48rpx 24rpx 0;
}

.signView {
    width: 702rpx;
    height: 384rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 40rpx 40rpx -8rpx rgba(0, 0, 0, 0.05);
    border-radius: 20rpx;
    margin-top: 40rpx;
    overflow: hidden;
    box-sizing: border-box;
    padding: 40rpx;
}

.dayView {
    width: 100%;
    height: 102rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 24rpx;
}

.dayItem {
    width: 64rpx;
    height: 100%;
    text-align: center;
}

.beansNum {
    background: #ececf6;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.beansNum, .beansNum image {
    width: 60rpx;
    height: 60rpx;
}

.beansNum image {
    vertical-align: top;
}

.signBtn {
    width: 320rpx;
    height: 88rpx;
    background: linear-gradient(90deg, rgba(110, 198, 252, 1) 0%, rgba(69, 206, 189, 1) 100%);
    border-radius: 8rpx;
    color: #fff;
    line-height: 88rpx;
    text-align: center;
    font-size: 40rpx;
    font-weight: bold;
    margin: 40rpx auto 0;
}

.Task {
    width: 100%;
    box-sizing: border-box;
    padding: 0 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #282828;
    font-size: 32rpx;
    font-weight: bold;
}

.rightBtn {
    width: 132rpx;
    height: 56rpx;
    background: linear-gradient(90deg, rgba(110, 198, 252, 1) 0%, rgba(69, 206, 189, 1) 100%);
    border-radius: 4rpx;
    text-align: center;
    line-height: 56rpx;
    color:#fff;
}

#getInfoBtn {
    width: 100vw;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    opacity: 0;
}
