    <view class='scrollView' style='height:100vh'>
        <scroll-view class="scroll-view_y" scroll-y style="height:100%">

            <view data-index='{{index}}' catchtap='goToDetails' class='contentView normalView' wx:for="{{contentArr}}" wx:key="index">

                <view class='contentUserInfo wrapflex'>

                    <view class='userImg'>
                        <image mode='aspectFill' src='{{srcDomin}}{{item.avatarurl}}' />
                    </view>

                    <view class='userNameBox columnflex'>
                        <view class='userNameView'>{{item.nickname}}</view>
                        <view style='color:#666;font-size:24rpx;'>{{item.time}}</view>
                    </view>

                    <!-- <view class='pointMenu'>
                        <text>...</text>
                    </view> -->

                </view>

                <view class='contentDetails'>
                   <text decode='1'>{{item.title}}</text>
                </view>

                <view class='contentImg'>
                    <image mode='aspectFill' src='{{srcDomin}}{{item.imgurl[0]}}' />
                </view>

                <view class='contentshare wrapflex'>

                    <!-- <view class='opinionBox'>
                        <image src='/assets/index/opinion.png' />
                        <text style='margin-left:14rpx;'>9999+</text>
                    </view> -->

                    <view class='praiseBox' data-index='{{index}}' data-id="{{item.id}}" catchtap='praiseEvent'>
                        <image src='/assets/index/praise.png' animation="{{praiseId==item.id?pointAni:''}}" wx:if="{{!item.dianji}}" />
                        <image animation="{{praiseId==item.id?pointAni:''}}" src='/assets/index/selectPrase.png' wx:if="{{item.dianji}}" />
                        <text style='margin-left:14rpx;'>16</text>
                    </view>

                    <view class='shareImg' catchtap='catchtap'>
                        <image src='/assets/index/shareImg.png' />
                        <button data-index='{{index}}' id='shareBtn' open-type='share'></button>
                    </view>
                </view>
            </view>

            <view class='botTxt' wx:if="{{showBotTxt}}">
                <text>已经到底了亲~</text>
            </view>

        </scroll-view>

    </view>

</view>