scroll-view {
    box-sizing: border-box;
    padding: 40rpx 0rpx;
}

.height638 {
    height: 238rpx;
}

.stateItem {
    width: 100%;
    margin-bottom: 32rpx;
    justify-content: space-between;
}

.timeView {
    width: 140rpx;
    text-align: center;
    color: #999;
    font-size: 24rpx;
    overflow: hidden;
}

.timeing {
    margin-top: 80rpx;
}

.point {
    width: 16rpx;
    height: 16rpx;
    background: linear-gradient(90deg, rgba(110, 198, 252, 1) 0%, rgba(69, 206, 189, 1) 100%);
    box-shadow: 0px 10rpx 20rpx 0px rgba(0, 0, 0, 0.2);
    border-radius: 40rpx;
    margin: 24rpx auto 0;
}

.contentView {
    width: 610rpx;
    background: white;
    box-sizing: border-box;
    padding: 32rpx 40rpx 38rpx 16rpx;
    box-shadow: 0px 20rpx 40rpx 0px rgba(0, 0, 0, 0.1);
    border-radius: 10rpx;
    justify-content: space-between;
}

.imgview {
    margin-right: 22rpx;
}

.contenticon {
    width: 144rpx;
    height: 144rpx;
}

.content {
    min-width: 116rpx;
    height: 144rpx;
    font-size: 28rpx;
    color: #282828;
    padding: 0;
    line-height: 48rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.opinionView{
    color: #172434;
    font-size: 28rpx;
    justify-content: flex-end;
}

.opinionView image{
    width: 28rpx;
    height: 28rpx;
    margin-right: 14rpx;
}
