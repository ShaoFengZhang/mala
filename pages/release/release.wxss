.topTextArea {
    width: 100%;
    min-height: 450rpx;
    box-sizing: border-box;
    padding: 40rpx;
    position: relative;
}

.topTextArea image{
    width: 66rpx;
    height: 66rpx;
    position: absolute;
    top: 40rpx;
    right: 40rpx;
}

#topArea{
    width: 670rpx;
    min-height: 360rpx;
}

.topicView {
    width: 670rpx;
    height: 96rpx;
    background: rgba(243, 245, 249, 1);
    border-radius: 8rpx;
    margin: 0 auto;
}

.choseIcon {
    width: 48rpx;
    height: 48rpx;
    background: rgba(39, 188, 173, 1);
    border: 2rpx solid rgba(40, 40, 40, 1);
    color: white;
    font-size: 40rpx;
    font-weight: bold;
    text-align: center;
    line-height: 48rpx;
    border-radius: 50%;
    margin: 0 16rpx 0 40rpx;
}

.topicView image {
    width: 80rpx;
    height: 80rpx;
}

.choseTxt {
    width: 466rpx;
    color: #282828;
    font-size: 32rpx;
}

.pictureView {
    width: 100%;
    box-sizing: border-box;
    padding: 40rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    position: relative;
}

.picItemView {
    position: relative;
    width: 200rpx;
    height: 200rpx;
    border-radius: 8rpx;
    background: #f3f5f9;
    margin: 0 34rpx 20rpx 0;
}

.picItemView:nth-of-type(3n+0) {
    margin-right: 0;
}

.picItemView image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 8rpx;
}

.closeicon {
    width: 31rpx;
    height: 31rpx;
    background-color: #27bcad;
    color: #fff;
    border-radius: 50%;
    text-align: center;
    line-height: 31rpx;
    font-size: 18rpx;
    font-weight: bold;
    border: 4rpx solid white;
    position: absolute;
    top: -14rpx;
    left: -14rpx;
}

.uploadPictures {
    width: 200rpx;
    height: 200rpx;
    background: #f3f5f9;
    border-radius: 8rpx;
    text-align: center;
    color: #282828;
}

.addIcon image {
    width: 60rpx;
    height: 60rpx;
    margin-top: 44rpx;
}

.changePic {
    position: absolute;
    right: 0rpx;
    top: 60rpx;
}

.changePic image {
    width: 66rpx;
    height: 66rpx;
}

/* btn */

.releaseView {
    width: 100%;
    height: 158rpx;
    /* box-shadow: 0px 2rpx 0px 0px rgba(231, 231, 231, 1); */
    /* border-top: 2rpx solid #f3f5f9; */
    justify-content: center;
}

.releaseBtn {
    width: 680rpx;
    height: 100rpx;
    background: linear-gradient(90deg, rgba(110, 198, 252, 1) 0%, rgba(69, 206, 189, 1) 100%);
    border-radius: 16rpx;
    color: #fff;
    font-size: 40rpx;
    text-align: center;
    line-height: 100rpx;
    position: relative;
}

#getInfoBtn{
    width: 680rpx;
    height: 100rpx;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}

