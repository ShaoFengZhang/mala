.bg {
    height: 100vh;
    background: #F3F5F9;
}

.posterImg{
    margin: 0 auto;
    border-radius:20rpx;
    overflow: hidden;
    /* position: relative; */
}

.posterImg image{
    height: 850rpx;
    vertical-align: top;
}

.changeImg{
    position: absolute;
    top: 700rpx;
    right: 0rpx;
}

/* 分类title */

.botClassView {
    width: 100%;
    height: 330rpx;
    position: absolute;
    bottom: 0;
    left: 0;
}

.classScroll {
    width: 614rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    margin: 0 auto;
    color: #282828;
    font-size: 32rpx;
}

.selectScroll {
    font-size: 36rpx;
    font-weight: bold;
}

/* 分类icon */

.classiconView {
    width: 702rpx;
    height: 120rpx;
    margin: 22rpx auto 0;
    text-align: center;
}

.classiconView image {
    width: 72rpx;
    height: 120rpx;
}

.iconselect image{
    box-sizing: border-box;
    border: 4rpx solid #27BCAD;
}

.botBtnView {
    width: 702rpx;
    height: 88rpx;
    margin: 24rpx auto 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.botBtnView view {
    width: 340rpx;
    height: 88rpx;
    text-align: center;
    line-height: 104rpx;
    position: relative;
}

/* gif图 */

.LoadingView {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #f9f7ef;
}

.LoadingView image {
    width: 440rpx;
    height: 440rpx;
}
