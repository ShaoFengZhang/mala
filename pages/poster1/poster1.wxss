.bg {
    height: 100vh;
    background: #F3F5F9;
}

.posterImg{
    margin: 0 auto;
    border-radius:16rpx;
    overflow: hidden;
}

.posterImg image{
    height: 850rpx;
    vertical-align: top;
}

/* 分类title */

.botClassView {
    width: 100%;
    height: 330rpx;
    position: absolute;
    bottom: 0;
    left: 0;
}

.classScroll {
    width: 614rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    margin: 0 auto;
    color: #282828;
    font-size: 32rpx;
}

.selectScroll {
    font-size: 36rpx;
    font-weight: bold;
}

/* 分类icon */

.classiconView {
    width: 702rpx;
    height: 120rpx;
    margin: 22rpx auto 0;
    text-align: center;
}

.classiconView image {
    width: 72rpx;
    height: 120rpx;
}

.botBtnView {
    width: 702rpx;
    height: 88rpx;
    margin: 24rpx auto 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.botBtnView view {
    width: 340rpx;
    height: 88rpx;
    text-align: center;
    line-height: 104rpx;
}

