<view class="bg">
    <view class='posterImg' style='width:{{imgW}}rpx;background:#fff' data-src="{{postSrc}}" catchtap='previewImage'>
        <image class='changeImg' style='width:104rpx;height:112rpx;' src='/assets/poster/changeimg.png' catchtap='changeImage' />
        <image bindload="bindload" style='width:{{imgW}}rpx;' mode='widthFix' src='{{postSrc}}' />
    </view>

    <view class='botClassView'>
        <!-- 分类title -->
        <view class='classScroll'>
            <swiper style='height:50rpx;' duration="{{300}}" display-multiple-items="{{classArr.length>4?4:classArr.length}}" current="{{classIndex}}">
                <block wx:for="{{classArr}}" wx:key="{{index}}">
                    <swiper-item class="{{classIndex==index?'selectScroll':null}}">
                        <view>{{item.txt}}</view>
                    </swiper-item>
                </block>
            </swiper>
        </view>
        <!-- 分类icon -->
        <view class='classiconView'>
            <swiper style='height:120rpx;' duration="{{300}}" display-multiple-items="{{classArr[classIndex].poster.length>8?8:classArr[classIndex].poster.length}}">
                <block wx:for="{{classArr[classIndex].poster}}" wx:key="{{index}}">
                    <swiper-item class="{{posterIndex==index?'iconselect':null}}">
                        <image data-url='{{item.posterAdress}}'  catchtap='changePoster' src='{{item.icon}}' data-index="{{index}}" />
                    </swiper-item>
                </block>
            </swiper>
        </view>
        <!-- 底部按钮 -->
        <view class='botBtnView'>
            <view catchtap='savePic'>
                <image style='width:224rpx;height:50rpx;' src='/assets/poster/newSave.png' />
            </view>
            <view>
                <image style='width:340rpx;height:88rpx;' src='/assets/poster/newShare.png' />
                <button  id='shareBtn' open-type='share'></button>
            </view>
        </view>

    </view>

    <view class='LoadingView' wx:if="{{ifGif}}">
        <image src='/assets/poster/load.gif'/>
    </view>

</view>