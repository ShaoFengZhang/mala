.userInfoView {
    width: 100%;
    min-height: 506rpx;
    max-height: 594rpx;
    box-sizing: border-box;
    padding-left: 30rpx;
    overflow: hidden;
    position: relative;
}

.userIcon {
    width: 100%;
    height: 200rpx;
    box-sizing: border-box;
    padding: 0 50rpx 0 62rpx;
    position: absolute;
    top: 38rpx;
    left: 0;
    justify-content: space-between;
}

.userImg {
    box-shadow: 0px 20rpx 40rpx 0px rgba(0, 0, 0, 0.3);
    border-radius: 20rpx;
    overflow: hidden;
}

.userIcon image, .userImg {
    width: 200rpx;
    height: 200rpx;
}

.guanzhu {
    width: 204rpx;
    height: 70rpx;
    background: linear-gradient(90deg, rgba(110, 198, 252, 1) 0%, rgba(69, 206, 189, 1) 100%);
    box-shadow: 0px 20rpx 40rpx 0px rgba(0, 0, 0, 0.1);
    border-radius: 16rpx;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    line-height: 70rpx;
    position: relative;
}

#getInfoBtn {
    width: 204rpx;
    height: 70rpx;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}

.userInfo {
    width: 720rpx;
    min-height: 322rpx;
    max-height: 410rpx;
    background: #fff;
    box-shadow: 0px 20px 40px 0px rgba(0, 0, 0, 0.1);
    border-radius: 20rpx;
    margin-top: 120rpx;
    overflow: hidden;
    box-sizing: border-box;
    padding: 0 32rpx;
}

.userdesc {
    width: 656rpx;
    min-height: 60rpx;
    max-height: 148rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #999;
    line-height: 52rpx;
    margin: 16rpx auto 0;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.userName {
    margin-top: 150rpx;
    font-size: 40rpx;
    color: #000;
    font-weight: bold;
}

scroll-view {
    box-sizing: border-box;
    padding: 0;
}

.height638 {
    height: 238rpx;
}

.stateItem {
    width: 100%;
    margin-bottom: 32rpx;
    justify-content: space-between;
}

.timeView {
    width: 140rpx;
    text-align: center;
    color: #999;
    font-size: 24rpx;
    overflow: hidden;
}

.timeing {
    margin-top: 80rpx;
}

.point {
    width: 16rpx;
    height: 16rpx;
    background: linear-gradient(90deg, rgba(110, 198, 252, 1) 0%, rgba(69, 206, 189, 1) 100%);
    box-shadow: 0px 10rpx 20rpx 0px rgba(0, 0, 0, 0.2);
    border-radius: 40rpx;
    margin: 24rpx auto 0;
}

.contentView {
    width: 610rpx;
    background: white;
    box-sizing: border-box;
    padding: 32rpx 40rpx 38rpx 16rpx;
    box-shadow: 0px 20rpx 40rpx 0px rgba(0, 0, 0, 0.1);
    border-radius: 10rpx;
    justify-content: space-between;
}

.imgview {
    margin-right: 22rpx;
}

.contenticon {
    width: 144rpx;
    height: 144rpx;
    vertical-align: middle;
}

.content {
    min-width: 116rpx;
    height: 144rpx;
    font-size: 28rpx;
    color: #282828;
    padding: 0;
    line-height: 48rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.opinionView {
    color: #172434;
    font-size: 28rpx;
    justify-content: flex-end;
}

.opinionView image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 14rpx;
}
