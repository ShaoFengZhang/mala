.userInfoView {
    width: 100%;
    height: 600rpx;
    box-sizing: border-box;
    padding: 0 40rpx 0;
    overflow: hidden;
    position: relative;
}

.userImg {
    overflow: hidden;
    box-shadow: 0px 20rpx 40rpx 0px rgba(0, 0, 0, 0.08);
    border-radius: 20rpx;
    position: absolute;
    top: 20rpx;
    left: 276rpx;
    z-index: 99;
}

.userImg image, .userImg {
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
}

.usernoteView {
    width: 670rpx;
    height: 424rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 40rpx 40rpx 0px rgba(0, 0, 0, 0.05);
    border-radius: 20rpx;
    margin: 120rpx auto 0;
    position: relative;
    z-index: 1;
}

.guanzhu {
    width: 204rpx;
    height: 70rpx;
    background: linear-gradient(90deg, rgba(110, 198, 252, 1) 0%, rgba(69, 206, 189, 1) 100%);
    box-shadow: 0px 20rpx 40rpx 0px rgba(39, 188, 173, 0.1);
    border-radius: 16rpx;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    line-height: 70rpx;
    position: absolute;
    top: 264rpx;
    left: 274rpx;
    z-index: 99;
}

.yiguanzhu {
    width: 204rpx;
    height: 70rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 8rpx;
    border: 2rpx solid rgba(231, 231, 231, 1);
    color: #000;
    font-size: 36rpx;
    position: absolute;
    top: 264rpx;
    left: 274rpx;
    z-index: 99;
    text-align: center;
    line-height: 70rpx;
}

#getInfoBtn {
    width: 204rpx;
    height: 70rpx;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}

.userInfo {
    width: 590rpx;
    height: 130rpx;
    line-height: 42rpx;
    box-sizing: border-box;
    position: absolute;
    top: 254rpx;
    left: 40rpx;
    font-size: 32rpx;
    color: #999;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.userName {
    margin-top: 150rpx;
    font-size: 40rpx;
    color: #000;
    font-weight: bold;
}

scroll-view {
    box-sizing: border-box;
    padding: 0;
}

.height638 {
    height: 238rpx;
}

.stateItem {
    width: 100%;
    margin-bottom: 32rpx;
    justify-content: space-between;
    background-color: rgba(0, 0, 0, 0);
}

.timeView {
    width: 140rpx;
    text-align: center;
    color: #999;
    font-size: 24rpx;
    overflow: hidden;
}

.timeing {
    margin-top: 80rpx;
}

.point {
    width: 16rpx;
    height: 16rpx;
    background: linear-gradient(90deg, rgba(110, 198, 252, 1) 0%, rgba(69, 206, 189, 1) 100%);
    box-shadow: 0px 10rpx 20rpx 0px rgba(0, 0, 0, 0.2);
    border-radius: 40rpx;
    margin: 24rpx auto 0;
}

.contentView {
    width: 610rpx;
    background: white;
    box-sizing: border-box;
    padding: 32rpx 40rpx 38rpx 16rpx;
    box-shadow: 0px 20rpx 40rpx 0px rgba(0, 0, 0, 0.1);
    border-radius: 10rpx;
    justify-content: space-between;
}

.imgview {
    margin-right: 22rpx;
}

.contenticon {
    width: 144rpx;
    height: 144rpx;
    vertical-align: middle;
}

.content {
    min-width: 116rpx;
    height: 120rpx;
    font-size: 28rpx;
    color: #282828;
    padding: 0;
    line-height: 40rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}

.opinionView {
    color: #172434;
    font-size: 28rpx;
    justify-content: flex-end;
}

.opinionView image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 14rpx;
}
