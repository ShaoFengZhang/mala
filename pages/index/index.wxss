
.top-swiperView {
    line-height: 96rpx;
    font-size: 32rpx;
    color: #666;
}

#swiper-ID, .top-swiperView {
    width: 100%;
    height: 96rpx;
}

swiper-item {
    position: relative;
}

.select-swiper-css {
    color: #282828;
    font-weight: bold;
}

.swiperTxt {
    display: inline-block;
    position: absolute;
}

.swiper-line {
    position: absolute;
    bottom: 0rpx;
    left: 0;
    display: block;
    width: 100%;
    height: 6rpx;
    background: rgba(39, 188, 173, 1);
}

#top {
    width: 100%;
    height: 1rpx;
}

scroll-view {
    overflow-y: scroll;
    overflow-x: hidden;
}
