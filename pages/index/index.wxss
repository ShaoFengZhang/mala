.bg {
    background-color: #f3f5f9;
    position: relative;
}

.imgBg{
    background-color: #F3F5F9;
    min-height: 100vh;
}

.topFixed {
    width: 100%;
    height: 98rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99999;
}

.top-swiperView {
    line-height: 96rpx;
    font-size: 40rpx;
    color: #666;
    background-color: white;
    font-weight: bold;
}

#swiper-ID, .top-swiperView {
    width: 100%;
    height: 96rpx;
}

swiper-item {
    position: relative;
    text-align: center;
}

.select-swiper-css {
    color: #282828;
    font-size: 44rpx;
    font-weight: bold;
}

.swiperTxt {
    width: 100rpx;
    text-align: center;
    display: inline-block;
    position: relative;
}

.swiper-line {
    position: absolute;
    bottom: 0rpx;
    left: 0;
    display: block;
    width: 100%;
    height: 6rpx;
    background: rgba(39, 188, 173, 1);
}

.scrollView {
    padding-top: 98rpx;
}

/* 图片列表 */
.imgListView{
    width: 100%;
    box-sizing: border-box;
    padding: 32rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    position: relative;
}

.imgListView image{
    width:330rpx;
    height: 550rpx;
    margin-bottom: 24rpx; 
    border-radius: 16rpx;
    vertical-align: top;
}

.qrMask{
    width: 290rpx;
    height: 88rpx;
    border-top: 2rpx solid #D8D8D8;
    position: absolute;
    bottom:44rpx;
    left: 20rpx;
    background-color: #fff;
    display: flex;
    justify-content: start;
    align-items: center;
}

.qrMaskImgView image,.qrMaskImgView{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

#getInfoBtn{
    width: 100%;
    min-height: 100%;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    z-index: 999;
}
