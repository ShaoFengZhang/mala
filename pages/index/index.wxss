.bg {
    background-color: #f3f5f9;
    position: relative;
}

.imgBg {
    background-color: #f3f5f9;
    min-height: 100vh;
}

.topFixed {
    width: 100%;
    height: 192rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99999;
}

.top-swiperView {
    line-height: 96rpx;
    font-size: 40rpx;
    color: #666;
    background-color: white;
    font-weight: bold;
}

#swiper-ID, .top-swiperView {
    width: 100%;
    height: 96rpx;
}

swiper-item {
    position: relative;
    text-align: center;
}

.select-swiper-css {
    color: #282828;
    font-size: 44rpx;
    font-weight: bold;
}

.swiperTxt {
    width: 100rpx;
    text-align: center;
    display: inline-block;
    position: relative;
}

.swiper-line {
    position: absolute;
    bottom: 0rpx;
    left: 0;
    display: block;
    width: 100%;
    height: 6rpx;
    background: rgba(39, 188, 173, 1);
}

.scrollView {
    padding-top: 192rpx;
}

/* 图片列表 */

.imgListView {
    width: 100%;
    box-sizing: border-box;
    padding: 32rpx 0 32rpx 0;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    position: relative;
}

.imgList {
    width: 100%;
    box-sizing: border-box;
    padding: 0 32rpx 0 32rpx;
    position: relative;
    margin-bottom: 20rpx;
    background: #fff;
}

.imgListView image {
    width: 670rpx;
    border-radius: 16rpx;
    /* width:330rpx;
    height: 550rpx;
    margin-bottom: 24rpx; 
    border-radius: 16rpx;
    vertical-align: top; */
}

.qrMask {
    width: 290rpx;
    height: 68rpx;
    border-top: 2rpx solid #f2f2f2;
    position: absolute;
    bottom: 44rpx;
    left: 20rpx;
    background-color: #fff;
    display: flex;
    justify-content: start;
    align-items: center;
    border-radius: 68rpx;
}

.qrMaskImgView image, .qrMaskImgView {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
}

.shoucang, .shoucang image {
    width: 750rpx;
    height: 94rpx;
    background-color: #fff;
}

.shoucang image {
    vertical-align: top;
}

#getInfoBtn {
    width: 100%;
    min-height: 100%;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    z-index: 999;
}

/* 广告 */

.nav {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    position: fixed;
    right: 20rpx;
    top: 380rpx;
    background-color: pink;
    font-size: 28rpx;
    text-align: center;
    font-weight: bold;
    color: pink;
}

.nav image {
    border-radius: 50%;
}

.adTxt{
    width: 100%;
    position: absolute;
    left: 0;
    bottom: -40rpx;
}

navigator {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    top: 0;
    left: 0;
}

/* 美图改版 */

.contentshare {
    width: 100%;
    height: 48rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-bottom: 20rpx;
}

.shareBtn {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    padding: 0;
    margin: 0;
}

view.newBotBtn {
    width: 180rpx;
    height: 48rpx;
    border-radius: 28rpx;
    color: #fff;
    font-size: 28rpx;
    line-height: 48rpx;
    text-align: center;
    margin-left: 12rpx;
    margin-top: 6rpx;
}
