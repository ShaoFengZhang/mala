/* 顶部用户基本信息 */

.userInfoView {
    width: 100%;
    box-sizing: border-box;
    padding: 0 24rpx 0 40rpx;
    margin-top: 18rpx;
}

.userIcon {
    width: 120rpx;
    height: 120rpx;
    box-shadow: 0px 4rpx 32rpx 0px rgba(0, 0, 0, 0.2);
    border-radius: 20rpx;
    overflow: hidden;
    margin-right: 24rpx;
}

.userDetails {
    height: 100%;
    color: #282828;
    justify-content: space-around;
}

.userDetails view {
    width: 542rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.userName {
    font-size: 40rpx;
    font-weight: bold;
}

.userDecs {
    font-size: 28rpx;
}

/* 用户数据统计条 */

.userDataView {
    width: 720rpx;
    height: 140rpx;
    box-shadow: 0px 20rpx 40rpx 0px rgba(0, 0, 0, 0.05);
    border-radius: 10rpx;
    margin-top: 42rpx;
    justify-content: space-around;
    text-align: center;
}

/* 实时通知 */

.dynamicData {
    width: 670rpx;
    height: 162rpx;
    margin: 42rpx auto 0;
    text-align: center;
    justify-content: space-around;
}

.message, .collection, .dynamic {
    height: 100%;
    position: relative;
}

.dynamicData image {
    width: 52rpx;
    height: 52rpx;
}

.redStar {
    width: 16rpx;
    height: 16rpx;
    background: rgba(255, 73, 58, 1);
    position: absolute;
    top: -6rpx;
    right: -6rpx;
    border-radius: 50%;
}

.editorView {
    width: 750rpx;
    height: 120rpx;
    line-height: 120rpx;
    box-sizing: border-box;
    padding: 0 24rpx 0 40rpx;
    align-items: center;
    justify-content: space-between;
}



