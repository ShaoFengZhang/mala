.bg {
    width: 100%;
    height: 100vh;
    background-color: #F3F5F9;
}

.toptxt{
    width: 100%;
    height: 5.3vh ;
    text-align: center;
    line-height:5.3vh ;
    color: #333;
    font-size: 28rpx;
}

.posterImg, .posterImg image {
    width: 670rpx;
    border-radius: 16rpx;
}

.posterImg image {
    vertical-align: middle;
}

.posterImg {
    margin: 0 auto;
    box-shadow: 6px 5px 10px -4px rgba(0, 0, 0, 0.06), 5px 1px 10px -4px rgba(0, 0, 0, 0.06);
}

.botBtnView{
    width: 100%;
    height: 158rpx;
    box-sizing: border-box;
    padding: 0 226rpx;
    display: flex;
    justify-content: space-between;
    position: fixed;
    left: 0;
    bottom: 0;
}

.botBtnView image{
    width: 96rpx;
    height: 96rpx;
    vertical-align: top;
}

.shareFriend,.backbtn{
    width: 96rpx;
    height: 100%;
    color: #000;
    font-size: 24rpx;
    text-align: center;
    line-height: 62rpx;
    position: relative;
}

